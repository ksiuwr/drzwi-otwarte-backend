{
	"compilerOptions": {
		"target": "ESNext",                                
		"module": "ESNext",
		"moduleResolution": "nodenext",                           
		"sourceMap": false,                           
		"outDir": "dist",                              
		"strict": true,                                 
		"esModuleInterop": true,                        
		"skipLibCheck": true,                           
		"forceConsistentCasingInFileNames": true,
		"allowJs": false   
	},
	"exclude": ["node_modules"]
}
